<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conn_bg_touch"
    android:theme="@style/ThemeOverlay.Touchpad.FullscreenContainer"
    tools:context=".TouchpadActivity">

    <RelativeLayout
        android:id="@+id/fullscreenContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingTop="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="36dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/settings512"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="@color/conn_fg_ok"
            android:background="@color/conn_bg_ok"
            android:textSize="22sp"
            android:textStyle="normal" />

    </RelativeLayout>

</FrameLayout>